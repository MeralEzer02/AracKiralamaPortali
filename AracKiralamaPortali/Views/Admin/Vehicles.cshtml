@model List<CarRentalPortal.ViewModels.VehicleListViewModel>  
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

    ViewData["Title"] = "Vehicle Management";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">VEHICLE LIST & MANAGEMENT</h1> <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Add New Vehicle 
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Car Rental Portal Inventory (@Model.Count items)</h6> </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Make)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Model)</th>
                            <th>@Html.DisplayNameFor(model => model.First().LicensePlate)</th>
                            <th>@Html.DisplayNameFor(model => model.First().ModelYear)</th>
                            <th>@Html.DisplayNameFor(model => model.First().DailyRate)</th>
                            <th>Status</th> <th>Actions</th> </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Make)</td>
                                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                                <td>@Html.DisplayFor(modelItem => item.LicensePlate)</td>
                                <td>@Html.DisplayFor(modelItem => item.ModelYear)</td>

                                <td>@item.DailyRate.ToString("C2")</td> 

                                <td>
                                    <span class="badge @(item.IsRented ? "badge-danger" : "badge-success")">
                                        @item.StatusText
                                    </span>
                                </td>
                                <td>
                                    <a href="#" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>