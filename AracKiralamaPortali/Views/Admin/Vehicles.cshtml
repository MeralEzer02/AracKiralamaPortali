@model List<AracKiralamaPortali.ViewModels.VehicleListViewModel>
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

    ViewData["Title"] = "Araç Yönetimi";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">ARAÇ LİSTESİ VE YÖNETİM</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Araç Ekle
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kiralama Portalı Araç Envanteri (@Model.Count adet)</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Marka)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Model)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Plaka)</th>
                            <th>@Html.DisplayNameFor(model => model.First().ModelYili)</th>
                            <th>@Html.DisplayNameFor(model => model.First().GunlukKiraUcreti)</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Marka)</td>
                                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                                <td>@Html.DisplayFor(modelItem => item.Plaka)</td>
                                <td>@Html.DisplayFor(modelItem => item.ModelYili)</td>

                                <td>@item.GunlukKiraUcreti.ToString("C2")</td>

                                <td>
                                    <span class="badge @(item.KiradaMi ? "badge-danger" : "badge-success")">
                                        @item.DurumMetni
                                    </span>
                                </td>
                                <td>
                                    <a href="#" class="btn btn-warning btn-sm">Düzenle</a>
                                    <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>